# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=painaidee_db

# Alternative: Full database URL (overrides individual DB_* settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# External APIs
TAT_API_KEY=your_tat_api_key_if_available
TAT_API_BASE_URL=https://tatapi.tourismthailand.org/api/v1

# File Storage (for future use)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Redis Configuration (for caching, if needed)
REDIS_URL=redis://localhost:6379/0

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_ga_id

# Environment
ENVIRONMENT=development  # development, staging, production